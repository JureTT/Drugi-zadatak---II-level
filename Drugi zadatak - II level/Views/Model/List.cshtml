@using PoslovnaLogika.Service;
@using PoslovnaLogika.Models;
@using Drugi_zadatak___II_level.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Drugi_zadatak___II_level.Models.VoziloModelVM>

@{
    ViewBag.Title = "List";
    VoziloServis servis = new VoziloServis();   //kod za popunjavanje dropdownliste
    Mape Mapa = new Mape();
    List<VoziloMarka> lista = servis.DohvatiMarke();
    List<VoziloMarkaVM> listaVM = Mapa.maper.Map<List<VoziloMarkaVM>>(lista);
    //VoziloMarkaVM svaVozila = new VoziloMarkaVM { Id = 0, Kratica = "Sve" };     // nepotrebno
    //listaVM.Insert(0, svaVozila);

    int a = 0;      // kod za listanje stranica u oba smjera
    int br = Model.TotalItemCount;
    string redni = Request.QueryString["sortiraj"];
    int str = Convert.ToInt16(Request.QueryString["strana"]);
    if (redni == "D_Id")
    {
        a = br + 1 - ((str - 1) * 10);
    }
    else
    {
        if (str > 0)
        {
            a = (str - 1) * 10;
        }
    }
}

<h2>Lista</h2>
<p>
    @Html.ActionLink("Kreiraj", "Create")
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="Message">@TempData["Message"]</span>

    @using (Html.BeginForm("List", "Model", FormMethod.Get))
    {
        <label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Marke vozila: </label>
        @Html.DropDownList("idMarke",
              listaVM.Select(item => new SelectListItem { Value = item.Id.ToString(), Text = item.Kratica }),
              "--odaberi--",
              new
              {
                  onchange = "submit()"
              })
        <label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Modeli vozila: </label>
        @Html.TextBox("Naziv")
        <input type="submit" value="Traži" />
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Redni broj", "List", new { sortiraj = ViewBag.sortId, idMarke = Request.QueryString["idMarke"], naziv = Request.QueryString["naziv"], strana = Request.QueryString["strana"] })
        </th>
        <th>
            @Html.ActionLink("Šifra marke", "List", new { sortiraj = ViewBag.sortIdMarke, idMarke = Request.QueryString["idMarke"], naziv = Request.QueryString["naziv"], strana = Request.QueryString["strana"] })
        </th>
        <th>
            @Html.ActionLink("Naziv", "List", new { sortiraj = ViewBag.sortNaziv, idMarke = Request.QueryString["idMarke"], naziv = Request.QueryString["naziv"], strana = Request.QueryString["strana"] })
        </th>
        <th>
            @Html.ActionLink("Kratica", "List", new { sortiraj = ViewBag.sortKratica, idMarke = Request.QueryString["idMarke"], naziv = Request.QueryString["naziv"], strana = Request.QueryString["strana"] })
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>
                @if (redni == "D_Id")
                {
                    @(a = a - 1)
                }
                else
                {
                    @(a = a + 1)
                }
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.IdMarke)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kratica)
            </td>
            <td>
                @Html.ActionLink("Uredi", "Edit", new { idModela = item.Id }) |
                @Html.ActionLink("Detalji", "Details", new { idModela = item.Id }) |
                @Html.ActionLink("Obriši", "Delete", new { idModela = item.Id })
            </td>
        </tr>
    }

</table>

@Html.PagedListPager(Model, strana => Url.Action("List",  new { strana, idMarke = Request.QueryString["idMarke"], naziv = Request.QueryString["naziv"], sortiraj = Request.QueryString["sortiraj"] }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })