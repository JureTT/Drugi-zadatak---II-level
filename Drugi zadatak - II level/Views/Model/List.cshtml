@using PoslovnaLogika.Service;
@using PoslovnaLogika.Models;
@using Drugi_zadatak___II_level.Models;
@model IEnumerable<Drugi_zadatak___II_level.Models.VoziloModelVM>

@{
    ViewBag.Title = "List";
    VoziloServis servis = new VoziloServis();
    Mape Mapa = new Mape();
    List<VoziloMarka> lista = servis.DohvatiMarke();
    List<VoziloMarkaVM> listaVM = Mapa.maper.Map<List<VoziloMarkaVM>>(lista);
    VoziloMarkaVM svaVozila = new VoziloMarkaVM { Id = 0, Kratica = "Sve" };
    listaVM.Insert(0, svaVozila);
    int a = 0;
}

<h2>Lista</h2>

<script type="text/javascript">

    function promjeniId() {
        var id = document.getElementById("Marke").value;
        var url = "/Model/List?idMarke=" + id;
        document.getElementById("Forma").action = url;
    }
</script>
<p>
    @Html.ActionLink("Kreiraj", "Create")
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="Message">@TempData["Message"]</span>

    @using (Html.BeginForm("List", "Model", FormMethod.Post, new { id = "Forma" }))
    {
        <label>Filter: </label>
        @Html.DropDownList("Marke",
                listaVM.Select(item => new SelectListItem { Value = item.Id.ToString(), Text = item.Kratica }),
                "--odaberi--",
                new
                {
                    onchange = "promjeniId();submit()"
                })
    }
</p>

<table class="table">
    <tr>
        <th>
            Redni broj
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdMarke)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kratica)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>
                @(a = a + 1)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.IdMarke)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kratica)
            </td>
            <td>
                @Html.ActionLink("Uredi", "Edit", new { idModela = item.Id }) |
                @Html.ActionLink("Detalji", "Details", new { idModela = item.Id }) |
                @Html.ActionLink("Obriši", "Delete", new { idModela = item.Id })
            </td>
        </tr>
    }

</table>
